{% set show_footer = true %}
{% set hide_call_to_action = true %}

{% extends 'base.twig' %}

{% block page_title %}{% endblock %}

{% block main_content %}

    <!--row-->
    <div class="row">
        <div class="col-lg-4 offset-lg-4">
            <div class="content sign-in-box">

                <div class="row mb-5">
                    <div class="col-lg-8 offset-lg-2">
                        <img style="width:100%" src="/assets/images/ico/huntr_logo_transparent_scale.png" alt="HuntRecipes">
                    </div>
                </div>

                <h5 class="text-center mb-4">Sign In</h5>

                <div class="alert alert-error" id="alert-sign-in" style="display:none">

                </div>

                <form id="frm-user-sign-in">

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                            <input required type="email" class="form-control" name="email" placeholder="Email" value="{{ email }}" aria-label="Email">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                            <input required type="password" class="form-control" name="password" placeholder="Password" aria-label="Password">
                        </div>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" value="" id="rememberme" name="rememberme" checked>
                        <label class="form-check-label" for="rememberme">
                            Remember me on this device
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary mb-4">Sign In</button>
                    </div>

                    <input type="hidden" id="request_uri" value="{{ request_uri }}"/>
                </form>

                <p class="text-bold"><a href="/account/identify/">Forgot account?</a></p>

                <p>Don't have an account yet? <a class="text-bold" href="/account/join/">Sign up.</a></p>

                <p>Don't want an account? <a class="text-bold" href="/home/">Browse without an account</a></p>

            </div>
        </div>
    </div>
    <!--//row-->

{% endblock %}
