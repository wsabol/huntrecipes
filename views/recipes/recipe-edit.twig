{% set show_footer = true %}

{% extends 'base.twig' %}

{% block page_title %}
    <h1 class="page-title" style="margin-bottom:12px">{{ page_title }}</h1>
{% endblock %}

{% block main_content %}

    <div class="content">
        <form id="recipe-form">
            <input type="hidden" name="recipe_id" value="{{ recipe.id }}">

            <h3>Basics</h3>

            <div class="row mb-3">
                <div class="col">
                    <label for="edit-title" class="form-label">Title</label>
                    <input required type="text" class="form-control" name="title" id="edit-title" placeholder="Title" value="{{ recipe.title }}">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label for="edit-category" class="form-label">Category</label>
                    <select required class="form-select" name="recipe_type_id" id="edit-category" >
                        <option value="0">Select...</option>
                    </select>
                </div>

                <div class="col">
                    <label for="edit-course" class="form-label">Course</label>
                    <select required class="form-select" name="course_id" id="edit-course" >
                        <option value="0">Select...</option>
                    </select>
                </div>

                <div class="col">
                    <label for="edit-cuisine" class="form-label">Cuisine</label>
                    <select required class="form-select" name="cuisine_id" id="edit-cuisine" >
                        <option value="0">Select...</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label for="edit-serving" class="form-label">Yield / Serving Count</label>

                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <input required type="text" class="form-control" name="serving_count" id="edit-serving" value="{{ recipe.serving_count }}" >
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <select required class="form-select" name="serving_measure_id" >
                        </select>
                    </div>
                </div>
            </div>

            <hr>

            <h3>Ingredients</h3>

            <div class="row">
                <div class="col-lg-4">
                    <label class="form-label">Grocery Item / Ingredient</label>
                </div>
                <div class="col-lg-3">
                    <label class="form-label">Ingredient Prep</label>
                </div>
                <div class="col-lg-1">
                    <label class="form-label">Quantity</label>
                </div>
                <div class="col-lg-2">
                    <label class="form-label">Unit</label>
                </div>
                <div class="col-lg-1"></div>
                <div class="col-lg-1"></div>
            </div>
            <div id="ingredient-container">

            </div>

            <button class="btn btn-primary">Add an Ingredient</button>

            <hr>

            <h3>Instructions</h3>

            <div id="instruction-container">

            </div>

            <button class="btn btn-primary">Add a Step</button>

            <hr>

            <h3>Photo</h3>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="image-upload" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="image-upload" accept="image/*">
                    </div>
                </div>
                <div class="col-md-6">
                    <p>Image Preview:</p>
                    <img id="image-preview" src="#" alt="your image" class="img-thumbnail rounded" style="display: none;" />
                </div>
            </div>

            <hr>

            <h3>Status</h3>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    I am still working on it - hide it from search
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                <label class="form-check-label" for="flexRadioDefault2">
                    I am done - Publish it!
                </label>
            </div>

            <hr>

            <button type="submit" class="btn btn-warning">Delete Recipe</button>
            <button type="submit" class="btn btn-primary">Save Recipe</button>

        </form>
    </div>

{% endblock %}
